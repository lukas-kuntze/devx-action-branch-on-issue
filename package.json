{
  "name": "devx-action-branch-on-issue",
  "version": "1.0.0",
  "description": "A GitHub Action that automatically creates branches from issues with smart sanitization and duplicate handling.",
  "author": "Lukas Kuntze",
  "license": "MIT",

  "repository": {
    "type": "git",
    "url": "git+https://github.com/lukas-kuntze/devx-action-branch-on-issue.git"
  },

  "keywords": [
    "automation",
    "branch-management",
    "developer-experience",
    "devx",
    "github-actions",
    "branch-automation",
    "workflow-automation"
  ],

  "main": "dist/index.js",

  "engines": {
    "node": ">=20.0.0"
  },

  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "lint": "eslint sourcecode/**/*.ts",
    "build": "tsc",
    "package": "ncc build sourcecode/main.ts -o dist --source-map --license licenses.txt",
    "all": "npm run format && npm run lint && npm run build && npm run package"
  },

  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0"
  },

  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  }
}
